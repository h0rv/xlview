{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "paths": {
      "xlview": ["./pkg/xlview.d.ts"]
    }
  },
  "include": [
    "js/**/*.ts",
    "src/demo/**/*.ts",
    "bench/**/*.ts",
    "tests/browser/**/*.ts",
    "tests/e2e/**/*.ts"
  ],
  "exclude": ["node_modules", "bench/node_modules", "**/*.spec.ts"]
}
